{
  "name": "backend",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "files": [
    "dist",
    "migrations"
  ],
  "main": "src/main.ts",
  "scripts": {
    "start": "tsx --env-file=.env src/main.ts",
    "dev": "tsx watch --env-file=.env src/main.ts",
    "second-node:dev": "PORT=8081 MONGODB_DB=omni-index-2 tsx watch --env-file=.env src/main.ts",
    "third-node:dev": "PORT=8082 MONGODB_DB=omni-index-3 tsx watch --env-file=.env src/main.ts",
    "build": "esbuild $(find src -name '*.ts') --platform=node --outdir=dist --sourcemap && tsc-alias",
    "build:migration": "esbuild $(find src migrations -name '*.ts') --platform=node --outdir=dist --sourcemap && tsc-alias",
    "test:e2e": "NODE_OPTIONS='--import tsx' vitest run",
    "lint": "tsc --noEmit",
    "lexicon:codegen": "lex gen-server ./src/atproto $(find ./src/atproto/lexicons -name '*.json') && rm ./src/atproto/index.ts && eslint --fix ./src/atproto",
    "db:seed": "tsx --env-file=.env scripts/seeding/seed.ts",
    "migration": "tsx --env-file=.env ./migrations/config.ts",
    "migration:up": "tsx --env-file=.env ./migrations/config.ts up",
    "migration:down": "tsx --env-file=.env ./migrations/config.ts down",
    "migration:new": "tsx --env-file=.env ./migrations/config.ts new",
    "migration:status": "tsx --env-file=.env ./migrations/config.ts status"
  },
  "dependencies": {
    "@atproto/api": "^0.15.5",
    "@atproto/common": "^0.4.10",
    "@atproto/identity": "^0.4.7",
    "@atproto/lexicon": "^0.4.10",
    "@atproto/oauth-client-node": "^0.2.16",
    "@atproto/sync": "^0.1.22",
    "@atproto/syntax": "^0.4.0",
    "@fastify/auth": "^5.0.2",
    "@fastify/autoload": "^6.3.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/formbody": "^8.0.2",
    "@fastify/secure-session": "^8.2.0",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@sinclair/typebox": "^0.34.33",
    "eventemitter2": "^6.4.9",
    "eventsource-parser": "^3.0.1",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "fastify-racing": "^2.0.0",
    "fastify-sse-v2": "^4.2.1",
    "mongodb": "^6.16.0",
    "multiformats": "^13.3.2",
    "nanoid": "^5.1.5",
    "rxjs": "^7.8.2",
    "undici": "^7.8.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.8.0",
    "@faker-js/faker": "^9.7.0",
    "@golevelup/ts-vitest": "^0.5.2",
    "@types/node": "^22.15.3",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.3",
    "mongo-migrate-ts": "^2.0.0",
    "pino-pretty": "^13.0.0",
    "testcontainers": "^10.25.0",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
