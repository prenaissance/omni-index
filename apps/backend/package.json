{
  "name": "backend",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "start": "tsx --env-file=.env src/main.ts",
    "dev": "tsx watch --env-file=.env src/main.ts",
    "build": "esbuild $(find src -name '*.ts') --platform=node --outdir=dist --sourcemap && tsc-alias",
    "test:e2e": "NODE_OPTIONS='--import tsx' vitest run",
    "lint": "tsc --noEmit",
    "lexicon:codegen": "lex gen-server ./src/atproto $(find ./src/atproto/lexicons -name '*.json') && rm ./src/atproto/index.ts && eslint --fix ./src/atproto",
    "db:seed": "tsx --env-file=.env scripts/seeding/seed.ts",
    "migration": "tsx --env-file=.env ./migrations/config.ts",
    "migration:up": "pnpm migration up",
    "migration:down": "pnpm migration down",
    "migration:new": "pnpm migration new",
    "migration:status": "pnpm migration status"
  },
  "dependencies": {
    "@atproto/api": "^0.13.15",
    "@atproto/common": "^0.4.8",
    "@atproto/lexicon": "^0.4.6",
    "@atproto/oauth-client-node": "^0.2.0",
    "@atproto/syntax": "^0.3.0",
    "@fastify/auth": "^5.0.1",
    "@fastify/autoload": "^6.0.2",
    "@fastify/cors": "^10.0.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/secure-session": "^8.1.1",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "@fastify/type-provider-typebox": "^5.0.1",
    "@sinclair/typebox": "^0.33.22",
    "eventemitter2": "^6.4.9",
    "fastify": "^5.1.0",
    "fastify-cli": "^7.0.1",
    "fastify-plugin": "^5.0.1",
    "fastify-racing": "^2.0.0",
    "fastify-sse-v2": "^4.2.1",
    "mongodb": "^6.10.0",
    "multiformats": "^13.3.1",
    "nanoid": "^5.0.9",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.5.6",
    "@faker-js/faker": "^9.5.0",
    "@golevelup/ts-vitest": "^0.5.2",
    "@types/node": "^22.9.0",
    "esbuild": "^0.24.0",
    "mongo-migrate-ts": "^1.6.2",
    "pino-pretty": "^13.0.0",
    "testcontainers": "^10.18.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.6"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
