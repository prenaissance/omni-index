{
  "include": ["src", "scripts", "test"],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
